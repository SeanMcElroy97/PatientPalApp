<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivityLoggedIn"
    android:background="@color/lightGrey">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/transparent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="finish"
        app:srcCompat="@drawable/patient_pal_logo" />

    <TextView
        android:id="@+id/aboutHomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/imageView"
        android:background="#00FFFFFF"
        android:fontFamily="@font/average"
        android:text="About"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#7FD858"
        android:textSize="36sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="669dp"
        android:layout_marginTop="116dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/aboutIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="Patient Pal is an android application that
allows patients to... "
            android:textColor="@color/quantum_black_text"
            android:textSize="32dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="159dp"
            android:text="- Send Prescriptions to your pharmacies"
            android:textColor="@color/quantum_black_text"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="239dp"
            android:text="- (By sending a prescription to a pharmacy you are giving your consent for said pharmacy to have access to all previous prescriptions )"
            android:textColor="@color/quantum_black_text"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="375dp"
            android:text="- View your previous prescriptions"
            android:textColor="@color/quantum_black_text"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="429dp"
            android:text="- View medicines you've been prescribed"
            android:textColor="@color/quantum_black_text"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="429dp"
            android:text="- Create and keep track of appointments"
            android:textColor="@color/quantum_black_text"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="512dp"
            android:text="- Find Nearby pharmacies"
            android:textColor="@color/quantum_black_text"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="567dp"
            android:text="- Keep up to date with the latest covid-19 figures"
            android:textColor="@color/quantum_black_text"
            android:textSize="22dp" />

    </RelativeLayout>
</RelativeLayout>